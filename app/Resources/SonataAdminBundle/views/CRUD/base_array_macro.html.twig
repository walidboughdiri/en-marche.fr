{% macro render_array(value, inline) %}
    {% if inline %}
        {% for key, val in value %}
            {% if not loop.first %}
                ,
            {% endif %}
            {% if val is iterable %}
                ({{ _self.render_array(val, inline) }})
            {% else %}
                {{ val|trans }}
            {% endif %}
        {% endfor %}
    {% else %}
        <ul>
            {% for key, val in value %}
                <li>
                    {% if val is iterable %}
                        {{ _self.render_array(val, inline) }}
                    {% else %}
                        {{ val|trans }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}
