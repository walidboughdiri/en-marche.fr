{% set route = app.request.attributes.get('_route') %}

<div class="l__wrapper--aside settings-menu">
    <ul>
        <li class="{{ route == 'app_user_profile' ? 'active' }}">
            <a href="{{ path('app_user_profile') }}">Mon compte</a>
        </li>

        <li class="{{ route == 'app_user_profile_donation' ? 'active' }}">
            <a href="{{ path('app_user_profile_donation') }}">Mes dons</a>
        </li>

        <li class="{{ route == 'app_user_edit' ? 'active' }}">
            <a href="{{ path('app_user_edit') }}">Mes informations personnelles</a>
        </li>

        {% if app.user.isAdherent %}
            <li class="{{ route == 'app_summary_manager_index' ? 'active' }}">
                <a target="_blank" href="{{ path('app_summary_manager_index') }}">
                    Modifier mon profil <i class="fa fa-external-link-alt"></i>
                </a>
            </li>
        {% endif %}

        <li class="{{ route == 'app_user_set_email_notifications' ? 'active' }}">
            <a href="{{ path('app_user_set_email_notifications') }}">Notifications</a>
        </li>

        <li class="{{ route == 'app_user_change_password' ? 'active' }}">
            <a href="{{ path('app_user_change_password') }}">Mot de passe</a>
        </li>
    </ul>
</div>
